@model Egypt_Times.Models.NewsResponse
@{
    ViewBag.Title = "Public News";
}

<div class="jumbotron">
    <h1>Customized News Website</h1>
    <p class="text-white"> View your news now with your own interests and customize them the way you want!</p>
</div>

<div class="card mb-3">
    <image src=@Model.articles[1].urlToImage width="100%" height="400"></image>

    <div class="card-body">
        <p class="card-text">@Model.articles[1].description</p>
    </div>
    <div class="card-body">
        <a href="@Model.articles[1].url" class="card-link">Read More</a>
    </div>
    <div class="card-footer text-muted">
        @Model.articles[1].publishedAt
    </div>
</div>


@{int timeLineCount = 14;} 
@for (int i = 2; i < timeLineCount; i++)
{
    if (Model.articles[i].urlToImage != null)
    {
        <div class="d-inline-flex">
            <div class="card border-warning mb-3" style="max-width: 20rem;">
                <image src=@Model.articles[i].urlToImage width="100%" height="300"></image>

                <div class="card-body">
                    <h4 class="card-title">@Model.articles[i].title</h4>
                    <p class="card-text">@Model.articles[i].description</p>
                </div>

                <div class="card-body">
                    <a href="@Model.articles[i].url" class="card-link">Read More</a>
                </div>
            </div>
        </div>
    }
    else
    {
        timeLineCount++;
    }


}

<br />


<hr />

<button type="button" class="btn btn-light">@Html.ActionLink("Refresh", "Request", "NewsApiClient")</button>



