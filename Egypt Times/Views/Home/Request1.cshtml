@model Egypt_Times.Models.NewsResponse
@{
    ViewBag.Title = "Request";
}

<h2>Request</h2>


@for (int i = 0; i <= 10; i++)
{

    <div class="card mb-3">
        <image src=@Model.articles[i].urlToImage width="100%" height="400"></image>

        <div class="card-body">
            <p class="card-text">@Model.articles[i].description</p>
        </div>
        <div class="card-body">
            <a href="@Model.articles[i].url" class="card-link">Read More</a>
        </div>
        <div class="card-footer text-muted">
            @Model.articles[i].publishedAt
        </div>
    </div>

}


