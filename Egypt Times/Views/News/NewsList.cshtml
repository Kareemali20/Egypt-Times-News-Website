@model Egypt_Times.Models.News
@{
    ViewBag.Title = "News Personalization";

}

<h2>News</h2>

<div>
    <br />
    <div class="form-horizontal">
        <h4>Choose your prefered news topics </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("NewsList", "News", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="text-white">Choose category </label>

                @Html.DropDownListFor(model => model.ID, new SelectList(ViewBag.Data, "Value", "Text"), new { })

            </div>
            <br />

            <input type="submit" value="Add Category" />
            <button type="button"> @Html.ActionLink("Done", "LogIn", "Person")</button>
        }

    </div>


    <br />
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-dismissible alert-dark">
            @ViewBag.Error

        </div>
    }
    else if (ViewBag.Succes != null)
    {
        <div class="alert alert-dismissible alert-success">
            @ViewBag.Succes

        </div>
    }

</div>
